<% vote_path = polymorphic_path([votable, :vote]) %>

<% if current_user.voted_for? votable %>
  <%= form_tag vote_path, method: :delete do %>
    <%= text_field_tag 'id', votable.id, hidden: true %>
    <%= text_field_tag 'type', votable.class.to_s.downcase, hidden: true %>
    <%= submit_tag '👍' + votable.get_likes.size.to_s, class: "btn btn-default active btn-sm pull-right" %>
  <% end %>
<% else %>
  <%= form_tag vote_path, method: :post do %>
    <%= text_field_tag 'id', votable.id, hidden: true %>
    <%= text_field_tag 'type', votable.class.to_s.downcase, hidden: true %>
    <%= submit_tag '👍' + votable.get_likes.size.to_s, class: "btn btn-default btn-sm pull-right" %>
  <% end %>
<% end %>



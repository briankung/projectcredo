<%
  vote_path = polymorphic_path([votable, :vote])
  if user_signed_in? && current_user.voted_for?(votable)
    http_method = :delete
  else
    http_method = :post
  end
%>

<%= form_tag vote_path, method: http_method do %>
  <%= text_field_tag 'id', votable.id, hidden: true %>
  <%= text_field_tag 'type', votable.class.to_s.downcase, hidden: true %>
  <%= submit_tag 'ðŸ‘ ' + votable.get_likes.size.to_s, class: "btn btn-default active btn-sm pull-left" %>
<% end %>

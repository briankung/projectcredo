<% if current_user.homepage.lists.include? list %>
  <%= link_to button_tag('Unpin from homepage', class: "btn btn-default btn-sm pull-right active"), pin_path(list), method: :delete %>
<% else %>
  <%= form_tag pins_path do %>
    <%= text_field_tag 'id', list.id, hidden: true %>
    <%= submit_tag 'Pin to homepage', class: "btn btn-default btn-sm pull-right" %>
  <% end %>
<% end %>
